pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker_hub')
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Test begin'
                    // Build the Docker image
                    sh 'docker build -t alphacharlie/hello ./helloWorld/'
                    echo 'This where the change happend'
                }
            }
        }
        stage('Push') {
            steps {
                script {
                    // Push the Docker image to Docker Hub
                    docker.withRegistry('', 'docker_hub') {
                        docker.image('alphacharlie/hello').push('latest')
                    }
                }
            }
        stage('Connect_ssh') {
            steps {
                script {
                    sshagent(credentials: ['simna1_ssh']) {
                        sh 'hostname -I'
                        sh 'ssh -o StrictHostKeyChecking=no ec2-user@172.31.42.180 "ls && docker pull alphacharlie/hello:latest && docker run -d -p 8765:80 a>
                        echo 'Task completed!'
                    }
                }
            }
        }
        }
    }
}
